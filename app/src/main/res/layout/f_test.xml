<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:id="@+id/relative_layoutG">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".addinationary.activity.MainActivity"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relative_layout">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@android:color/black"
                card_view:contentPadding="15dp"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="5dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:alpha="0.8"
                android:id="@+id/cardQuastion">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:id="@+id/question"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/texts"
                        android:textStyle="bold|italic"
                        android:textColor="@color/text_color"
                        android:textSize="16dp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                card_view:cardBackgroundColor="@android:color/black"
                card_view:contentPadding="15dp"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="5dp"
                android:alpha="0.8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardAnswer"
                tools:layout_alignBaseline="@+id/cardView3"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/liner_layout"
                tools:layout_alignBaseline="@+id/cardView3"
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:background="@drawable/selector_card_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/answ1"
                    android:text="@string/texts"
                    android:layout_marginBottom="11dp"
                    android:textColor="@color/text_color"
                    android:textStyle="bold"
                    android:textSize="16dp" />

                <TextView
                    android:background="@drawable/selector_card_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/answ2"
                    android:text="@string/texts"
                    android:layout_below="@+id/answ1"
                    android:textColor="@color/text_color"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="11dp" />

                <TextView
                    android:background="@drawable/selector_card_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/answ3"
                    android:layout_below="@+id/answ2"
                    android:textStyle="bold"
                    android:text="@string/texts"
                    android:textColor="@color/text_color"
                    android:textSize="16dp"
                    android:layout_marginBottom="11dp" />

                <TextView
                    android:background="@drawable/selector_card_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/answ4"
                    android:text="@string/texts"
                    android:textColor="@color/text_color"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_above="@+id/answ5"
                    android:layout_marginBottom="11dp" />

                <TextView
                    android:background="@drawable/selector_card_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/answ5"
                    android:textColor="@color/text_color"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="@string/texts"/>

            </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@android:color/black"
                card_view:contentPadding="15dp"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="5dp"
                android:alpha="0.8"
                android:id="@+id/cardView3"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="70dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:id="@+id/counterText"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/texts"
                    android:textColor="@color/text_color"
                    android:textSize="16dp" />

            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

